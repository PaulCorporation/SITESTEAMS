            </div>
		<div class="profil_game_block">
                <!--Partie post-->
                <div class="col-xl-4">
                    <div class="parametres_block">
			<a href="/game/{{jeu.getId()}}"><img style="width:15vw; height:375px;" src="{{ jeu.getImagelink() }}" alt="Bannen" class="banner"></a>
                    </div>
                </div>
                <div class="col-xl-8">
                    <div class="change_content">
			<h4>{{jeu.getName()}} </h4>
			<h4>{{ jeu.getDescription() }}</h4>
			<div><a href=/download/{{ jeu.getId() }}>Télécharger</a> </div>
			<h4> Type de jeu : {{ jeu.getGenre() }} </h4>
			{% if owner == true %}
				<h4><a href="/delete?id={{ jeu.getId() }}">supprimer </a></h4>
				<h4><a href="/post/edit/{{ jeu.getId() }}">Editer </a></h4>
			{% endif %}
			<h4>nombre de téléchargements : {{ download }}</h4>
			<!--<img src="/images/like.png" style="width:50px; height:50px">-->
                    </div>
                </div>  
